<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>dev.galasa</groupId>
		<artifactId>galasa-parent</artifactId>
		<version>0.15.0-SNAPSHOT</version>
	</parent>

	<artifactId>galasa-isolated-resources-generic</artifactId>
	<version>0.15.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<description>Builds a generic docker image for the isolated resources</description>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.1.2</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>process-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>dev.galasa</groupId>
									<artifactId>dev.galasa.eclipse.site</artifactId>
									<version>0.15.0-SNAPSHOT</version>
									<type>zip</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/image/</outputDirectory>
								</artifactItem>
                                <artifactItem>
                                    <groupId>dev.galasa</groupId>
                                    <artifactId>galasa-isolated-mvp-maven-repo</artifactId>
                                    <version>0.15.0-SNAPSHOT</version>
                                    <classifier>repo</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/image/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>dev.galasa</groupId>
                                    <artifactId>galasa-isolated-full-maven-repo</artifactId>
                                    <version>0.15.0-SNAPSHOT</version>
                                    <classifier>repo</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/image/</outputDirectory>
                                </artifactItem>
							</artifactItems>
							<stripClassifier>true</stripClassifier>
							<stripVersion>true</stripVersion>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
